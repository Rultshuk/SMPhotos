@model SMPhotos.Web.ViewModel.AlbumVM
@{
    ViewBag.Title = Model.Name;
}
@section Styles
{
    @Styles.Render("~/Content/fancyBox/css")
    @Styles.Render("~/Content/main/css")
}
@*<hr />*@
<div class="row">
    <div class="col-sm-12 col-lg-12 col-md-12 col-xs-12"><h2>@Model.Name - @Model.Description</h2></div>
</div>
<div class="btn-toolbar" role="toolbar">
    <div class="btn-group">
        <span class="lead btn btn-default">
            <a href="@Url.Action(MVCManager.Controller.Main.albums, MVCManager.Controller.Main.Name)" title="Return to Albums">
                <span class="glyphicon glyphicon-arrow-left"></span>
            </a>
        </span>
        @if (User.IsInRole("Uploader"))
        {
            <span class="lead btn btn-default">
                <a href="@Url.Action(MVCManager.Controller.Main.ImageLoad, MVCManager.Controller.Main.Name, new { id = Model.Id })" title="Add images"><span class="glyphicon glyphicon-plus"></span></a>
            </span>}
        <span class="lead btn btn-default btn-disabled">
            <strong title="View as grid"><span class="glyphicon glyphicon-th-large"></span></strong>
        </span>
        <span class="lead btn btn-default">
            <a href="@Url.Action(MVCManager.Controller.Main.albumtext, MVCManager.Controller.Main.Name, new { Id = Model.Id})" title="View as list"><span class="glyphicon glyphicon-th-list"></span></a>
        </span>
        <span class="lead btn btn-default">
            <a href="@Url.Action(MVCManager.Controller.Main.albumtext, MVCManager.Controller.Main.Name, new { Id = Model.Id})" title="Edit this album"><span class="glyphicon glyphicon-edit"></span></a>
        </span>
        <span class="lead btn btn-default">
            <a href="@Url.Action(MVCManager.Controller.Main.albumtext, MVCManager.Controller.Main.Name, new { Id = Model.Id})" title="Remove this album"><span class="glyphicon glyphicon-remove"></span></a>
        </span>
    </div>
</div>

<div class="row row-centered">
    @foreach (var image in Model.Image)
    {
        <div class="center-cropped col-sm-12 col-lg-12 col-md-12 col-xs-12 col-centered">
            <span class="">
                <a href="@Url.Action(MVCManager.Controller.Main.albumtext, MVCManager.Controller.Main.Name, new { Id = Model.Id})" title="Remove this image"><span class="glyphicon glyphicon-remove"></span></a>
            </span>
            <a class="fancybox-thumb" rel="fancybox-thumb" href="@Url.Action("GetImage", "Image", new { ImageId = image.Id, name = image.Name})" title="@image.Description">
                <img src="@Url.Action("GetImage", "Image", new { ImageId = image.Id, name = image.Name })" alt="@image.Description" />
            </a>
        </div>}
</div>
@section Script
{
    @Scripts.Render("~/Scripts/fancyBox/js")
    <script type="text/javascript">
        $(document).ready(function () {
            $(".fancybox-thumb").fancybox({
                prevEffect: 'none',
                nextEffect: 'none',
                closeBtn: false,
                helpers: {
                    title: {
                        type: 'outside'
                    },
                    thumbs: {
                        width: 50,
                        height: 50
                    },
                    buttons: {}
                }
            });
        });
    </script>
}
