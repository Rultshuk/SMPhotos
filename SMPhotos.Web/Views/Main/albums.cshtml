@model SMPhotos.Web.ViewModel.AlbumListVM
@{
    ViewBag.Title = "Main albums";
}
<!-- Navigation -->
<!-- Page Content -->
<div class="container">

    <!-- Page Header -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Welcome to SMPhoto!
                <small>Some other text</small>
            </h1>
        </div>
    </div>
    <!-- /.row -->
    <!-- Projects Row -->
    <div class="row">
        @foreach (var albums in Model.AllAlbums)
        {
            <div class="col-md-4 portfolio-item">
                <a href="@Url.Action("album", new { id = albums.Id})" title="@albums.Description"><img class="img-responsive" src="@albums.PathAlbum@albums.Image[0].Name" alt="@albums.Description"></a>
                <h3>
                    <a href="@Url.Action("album", new { id = albums.Id})">Album @albums.Name</a>
                </h3>
                <p>@albums.Description</p>
            </div>
        }
    </div>
    <!-- /.row -->
    <hr>
    <!-- Pagination -->
    <div class="row text-center">
        <div class="col-lg-12">
            <ul class="pagination">
                <li>
                    <a href="#">&laquo;</a>
                </li>
                <li class="active">
                    <a href="#">1</a>
                </li>
                <li>
                    <a href="#">2</a>
                </li>
                <li>
                    <a href="#">3</a>
                </li>
                <li>
                    <a href="#">4</a>
                </li>
                <li>
                    <a href="#">5</a>
                </li>
                <li>
                    <a href="#">&raquo;</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- /.row -->
    <hr>
</div>

@section Styles
{
    @Styles.Render("~/Content/main/css")
}