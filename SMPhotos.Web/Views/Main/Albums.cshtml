@model SMPhotos.Web.ViewModel.AlbumListVM
@{
    ViewBag.Title = "Main albums";
}

@section Styles
{
    @Styles.Render("~/Content/main/css")
}
<!-- Navigation -->
<!-- Page Content -->
<div class="container">
    <!-- Page Header -->
    <div class="row">
        <div class="col-sm-6 col-lg-6 col-md-6">
            <h2 class="page-header">
                Welcome to SMPhoto!
            </h2>
        </div>
        @if (User.IsInRole("Uploader"))
        {
            <div class="col-sm-6 col-lg-6 col-md-6">
                <a href="@Url.Action("CreateAlbum", MVCManager.Controller.Main.Name)">
                    <button class="btn btn-default navbar-right" type="submit">Add Album</button>
                </a>
            </div>}
    </div>
    <!-- /.row -->
    <!-- Projects Row -->
    <div class="row">
        @foreach (var albums in Model.AllAlbums)
        {
            <div class="portfolio-item col-sm-3 col-md-3 col-xs-3 col-lg-3">
                <a href="@Url.Action("album", new { id = albums.Id })" title="@albums.Name - @albums.Description">
                    @if (@albums.Image.Count > 0)
                    {
                        <img class="" src="@Url.Action("GetImage", "Image", new { ImageId = albums.Image[0].Id })" alt="@albums.Description">
}
                    else
                    {
                        <img class="" src="~/Images/no_image_thumb.gif" title="@albums.Description" alt="@albums.Description">
}
                </a>
                <h4 class="text-center">
                    <a href="@Url.Action("album", new { id = albums.Id})" title="@albums.Name">@albums.Name</a>
                </h4>
                <p class="text-center">@albums.Description</p>
            </div>
        }
    </div>
