@model SMPhotos.Web.ViewModel.AlbumVM
@{
    ViewBag.Title = Model.Name;
}
@section Styles
{
    @Styles.Render("~/Content/fancyBox/css")
    @Styles.Render("~/Content/main/css")
}

<div class="container">
    <h2>@Model.Description</h2>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-xs-6 col-lg-6 left">
            <a href="@Url.Action(MVCManager.Controller.Main.albums, MVCManager.Controller.Main.Name)" title="Return to Albums" class="lead"><span class="glyphicon glyphicon-arrow-left"></span> Return to @MVCManager.Controller.Main.albums</a>
        </div>
        <div class="col-sm-6 col-md-6 col-xs-6 col-lg-6">
            <span class="pull-right lead">
                View as
                <a href="@Url.Action(MVCManager.Controller.Main.album, MVCManager.Controller.Main.Name, new { Id = Model.Id})" title="View as grid"><span class="glyphicon glyphicon-th-large"></span></a>
                <strong title="View as list"><span class="glyphicon glyphicon-th-list"></span></strong>
            </span>
        </div>
    </div>
    <div class="row">
        @*<hr />*@
        @foreach (var image in Model.Image)
        {
            <a class="fancybox-button" rel="fancybox-thumb" href="@Model.PathAlbum@image.Name" title="@image.Description">
                @image.Name
            </a><span>&nbsp;|&nbsp;</span>}
    </div>
</div>
@section Script
{
    @Scripts.Render("~/Scripts/fancyBox/js")
    <script type="text/javascript">
        $(document).ready(function () {
            $(".fancybox-button").fancybox({
                prevEffect: 'none',
                nextEffect: 'none',
                closeBtn: false,
                helpers: {
                    title: {
                        type: 'outside'
                    },
                    buttons: {}
                }
            });
        });
    </script>
}
