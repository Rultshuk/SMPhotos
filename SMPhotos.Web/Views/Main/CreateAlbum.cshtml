@model SMPhotos.Web.ViewModel.AlbumVM
@{
    ViewBag.Title = @Translation.CreateAlbum;
}

@Styles.Render("~/Content/login/css")

    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            @using (Html.BeginForm(MVCManager.Controller.Main.CreateAlbum, MVCManager.Controller.Main.Name, FormMethod.Post, new { @class = "form-signin" }))
            {
                <h2>@Translation.CreateAlbum</h2>
                <hr>
                <div class="form-group">
                    @Html.HiddenFor(m => m.Id)
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Album Name", @required = "true", @maxlength = "128" } })
                </div>
                        <div class="form-group">
                            @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Description", @maxlength = "128" } })
                        </div>
                        <button type="submit" class="btn btn-primary btn-block btn-lg">@Translation.CreateAlbum</button>
        }
    </div>
</div>

