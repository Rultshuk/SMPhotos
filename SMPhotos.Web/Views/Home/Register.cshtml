@model SMPhotos.Web.ViewModel.RegisterUserVM
@{
    ViewBag.Title = "Register";
}
@Html.Partial("_Navigation")
@Styles.Render("~/Content/join/css")
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "joinus" }))
            {<h2>Please Sign Up <small>It's free, don`t be scared.</small></h2>
            <hr>
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.FirstName, htmlAttributes: new { @class = "form-control input-lg", @placeholder = "First Name", @tabindex = "1" })
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.LastName, htmlAttributes: new { @class = "form-control input-lg", @placeholder = "Last Name", @tabindex = "2" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Location, htmlAttributes: new { @class = "form-control input-lg", @placeholder = "Country", @tabindex = "3" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control input-lg", @placeholder = "Email Address", @tabindex = "4", @type = "email", @required = "true" })
                </div>
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Password, htmlAttributes: new { @class = "form-control input-lg", @placeholder = "Password", @tabindex = "5", @type = "password", @required = "true" })
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.PasswordConfirmation, htmlAttributes: new { @class = "form-control input-lg", @placeholder = "Confirm Password", @tabindex = "6", @type = "password", @required = "true" })
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-xs-6 col-md-6"><button type="submit" class="btn btn-primary btn-block btn-lg" tabindex="7">Register</button></div>
                    <div class="col-xs-6 col-md-6"><a href="#" class="btn btn-success btn-block btn-lg">Sign In</a></div>
                </div>}
        </div>
    </div>
</div>

