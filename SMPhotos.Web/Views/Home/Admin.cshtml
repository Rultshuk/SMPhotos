            <br>
            <br>
            <br>
            <h3>Users: </h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Email</th>
                        <th class="checktool col-md-1">Active</th>
                        <th class="checktool col-md-1">Admin</th>
                        <th class="checktool col-md-1">Uploader</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in ViewBag.User)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td><input type="checkbox" @if(user.IsActive) {<text>checked</text>} id="isActive" /></td>
                            <td><input type="checkbox" @if(user.IsAdmin) {<text>checked</text>} id="isAdmin" /></td>
                            <td><input type="checkbox" @if(user.IsUploader) {<text>checked</text>} id="isUploader" /></td>
                        </tr>}
                </tbody>
            </table>
            <button type="button" class="btn btn-primary">Apply changes</button>
        </form>
    </div>

