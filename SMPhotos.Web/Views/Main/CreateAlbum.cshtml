@model SMPhotos.Web.ViewModel.AlbumVM
@{
    ViewBag.Title = "CreateAlbum";
}

@Styles.Render("~/Content/login/css")

    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            @using (Html.BeginForm("CreateAlbum", MVCManager.Controller.Main.Name, FormMethod.Post, new { @class = "form-signin" }))
            {
                <h2>Creating new album</h2>
                <hr>
                        <div class="form-group">
                            @Html.HiddenFor(m => m.Id)
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Album Name", @required = "true" } })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Description" } })
                        </div>
                        <button type="submit" class="btn btn-primary btn-block btn-lg">Create Album</button>
            }
        </div>
    </div>

